  "firstName": "AdminOwn",
  "lastName": "User",
  "email": "admin.own.user.unique@example.com",
  "password": "Password1232",
  "phone": "3333333333",
  "dni": "33333333",
  "street": "Admin Own St",
  "city": "Admin Own City",
  "state": "Admin Own State",
  "country": "Admin Own Country",
  "zipCode": "33333",
  "business_uuid": "1a2b3c4d-5e6f-4a7b-8c9d-0e1f2a3b4c5d",
